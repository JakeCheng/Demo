<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/BackGroundColor" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <com.example.android.demo.MyView.Vertical.VerticalTabLayout
            android:id="@+id/category_v_tablayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="visible"
            app:indicator_gravity="fill"
            app:tab_height="@dimen/dp_40"
            app:tab_mode="scrollable"/>
        <View
            android:id="@+id/category_v_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/BackGroundColor" />
        <com.example.android.demo.MyView.Vertical.VerticalViewPager
            android:id="@+id/category_viewpager"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
